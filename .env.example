# Railway MySQL Configuration
# Copy this file to .env and update with actual Railway values
# See README.md for Railway deployment instructions

# Database Host (Railway MySQL hostname)
MYSQLHOST=localhost

# Database Username
MYSQLUSER=root

# Database Password
MYSQLPASSWORD=

# Database Name
MYSQLDATABASE=word_tracker

# Database Port (default 3306)
MYSQLPORT=3306

# Optional: Railway Environment Detection
# Set to "production" on Railway, "development" locally
RAILWAY_ENVIRONMENT=development
